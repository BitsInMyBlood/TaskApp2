<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.thisbit.taskapp2.EditTaskActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTaskTitleEditText"
        android:inputType="textCapSentences|textMultiLine"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="thisTitle"
        android:textSize="24sp"
        android:hint="Enter a task title here" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="Save"
        android:id="@+id/editTaskSaveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:text="Edit Date"
        android:id="@+id/editTaskDateButton"
        android:onClick="showDatePickerDialog"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select a Date"
        android:id="@+id/editTaskEDOCTextView"
        android:layout_below="@+id/editTaskTitleEditText"
        android:layout_alignParentStart="true"
        android:textSize="14sp"
        android:layout_toStartOf="@+id/button6" />

    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:id="@+id/button6"
        android:onClick="homeButtonOnClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:inputType="textCapSentences|textMultiLine"
        android:id="@+id/editTaskDescriptionEditText"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:layout_below="@+id/editTaskEDOCTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/editTaskSaveButton"
        android:textSize="18sp"
        android:hint="Enter a description or details, here." />

</RelativeLayout>
